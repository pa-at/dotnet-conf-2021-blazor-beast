@using BlazorBeast.Shared.Rendering
@inject RenderLocation _renderLocation

<Menu>
    @if (_renderLocation is RenderedOnClient)
    {
        <button data-test-class="play-button" class="btn btn-primary btn-lg" @onclick="@OnPlay">Play</button>
    }
    else
    {
        <Loading />   
    }

</Menu>

@code {
    [Parameter]
    public Func<Task> OnPlay { get; set; }
}