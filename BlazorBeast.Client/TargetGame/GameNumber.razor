@implements IGameNumber

<CascadingValue TValue="IGameNumber" Value="@this">
    @ChildContent
</CascadingValue>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    public int Id { get; private set; }

    public void NextGame()
    {
        ++Id;
        StateHasChanged();
    }
}